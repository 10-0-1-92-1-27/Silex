.silex-workspace
  // file explorer
  iframe#silex-file-explorer.notranslate(
    frameborder='no',
    scrolling='no',
    allowfullscreen='yes',
    data-ce-unifile-url='api/1.0/',
    data-ce-path='/libs/cloud-explorer/')

  // menu
  .silex-menu

  // page tool
  .silex-page-tool.notranslate
    include ./page-tool.jade

  .silex-context-menu
    .save.off(title='Save')
    .undo.off(title='Undo')
    .redo.off(title='Redo')
    .sep
    .text(title='Text')
    .image(title='Image')
    .container(title='Container')
    .html(title='Html')
    .sep
    .delete.off(title='Delete')
    .copy.off(title='Copy')
    .paste.off(title='Paste')
    .sep
    .top.off(title='To top')
    .up.off(title='Up')
    .down.off(title='Down')
    .bottom.off(title='To bottom')
    .sep
  .tip-of-the-day
    img(src='assets/tooltip-callout.gif')

  // vertical splitter
  .vertical-splitter
    .knob

  // properties tool
  .silex-property-tool.notranslate
    include ./property-tool.jade

  // stage
  .silex-stage
    // notranslate is to prevent chrome automatic translation
    iframe#silex-stage-iframe.silex-stage-iframe.notranslate

  // dialogs background
  .dialogs-background

  // settings
  .silex-settings-dialog.hidden-dialog
    include ./settings-dialog.jade

  // html editor
  .silex-html-editor.ace-editor-container.notranslate.hidden-dialog
    .title-bar HTML editor
      a.help-icon(href='https://github.com/silexlabs/Silex/issues/199', title='about Silex and HTML', target='blank') Help
    .ace-editor
    .dock-btn.buttons
    .close-btn.html-editor-close-btn.buttons

  // css editor
  .silex-css-editor.ace-editor-container.notranslate.hidden-dialog
    .title-bar CSS editor
      a.help-icon(href='https://github.com/silexlabs/Silex/issues/184', title='about Silex and CSS', target='blank') Help
    .ace-editor
    .dock-btn.buttons
    .close-btn.css-editor-close-btn.buttons

  // js editor
  .silex-js-editor.ace-editor-container.notranslate.hidden-dialog
    .title-bar JS editor
      a.help-icon(href='https://github.com/silexlabs/Silex/issues/200', title='about Silex and Javascript', target='blank') Help
    .ace-editor
    .dock-btn.buttons
    .close-btn.js-editor-close-btn.buttons

  // text editor
  .silex-text-editor.notranslate.hidden-dialog
    .toolbar
    #text-editor.text-field
    .close-btn.text-editor-close-btn.buttons
